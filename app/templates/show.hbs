
<div class="Header" role="banner">
  <h1 class="Logo">
    {{#link-to "index" class="Logo-link"}}CS:GO Configr{{/link-to}}
  </h1>
  <ul class="Navigation" role="navigation">
    <li class="Navigation-item">
      {{#link-to "create.index" class="Navigation-link" activeClass="active"}}
        <span class="octicon octicon-plus"></span>
        <span class="Navigation-text">Create</span>
      {{/link-to}}
    </li>
    <li class="Navigation-item">
      {{#link-to "create.import" class="Navigation-link" activeClass="active"}}
        <span class="octicon octicon-clippy"></span>
        <span class="Navigation-text">Import</span>
      {{/link-to}}
    </li>
    <li class="Navigation-item">
      <button class="Navigation-link Navigation-link--download" {{action 'download'}}>
        <span class="octicon octicon-desktop-download"></span>
        <span class="Navigation-text">Download</span>
      </button>
    </li>
    <li class="Navigation-item">
      <button class="Navigation-link Navigation-link--edit" {{action 'edit'}}>
        <span class="octicon octicon-pencil"></span>
        <span class="Navigation-text">Edit</span>
      </button>
    </li>
  </ul>
</div>

<div class="Main" role="main">
  <div class="layout-widthDefault">
    {{#each flashMessages.queue as |flash|}}
      <div class="Alerts">
        {{#flash-message flash=flash as |component flash|}}
          <div class="Alerts-message Alerts-message--{{component.flashType}}">
            {{flash.message}}
          </div>
        {{/flash-message}}
      </div>
    {{/each}}
    {{preview-window data=model config=createConfig redirectToCreate="redirectToCreate"}}
  </div>
</div>


<div class="Category">
  <button class="Category-title {{if isOpen "Category-title--open"}}" {{action 'toggleDisplay'}}>
    <span class="octicon {{if isOpen "octicon-chevron-down" "octicon-chevron-right"}}"></span>
    <span class="Category-title-text">Crosshair</span>
  </button>
  <ul class="Category-inputs {{if isOpen "Category-inputs--open"}}">
    <li class="Category-item">
      <label for="crosshair-style-select">Style <i class="octicon octicon-info"></i> <i class="reset-value octicon octicon-sync" {{action 'setToDefaultValue' 'clCrosshairstyle'}}></i></label>
      {{custom-select data=model.clCrosshairstyle options=styleOptions dataCommand="cl_crosshairstyle"}}
    </li>
    <li class="Category-item">
      <label for="crosshair-color-r-slider">Red <i class="octicon octicon-info"></i> <i class="reset-value octicon octicon-sync" {{action 'setToDefaultValue' 'clCrosshaircolorR'}}></i></label>
      {{input data-command="cl_crosshaircolor_r" id="crosshair-color-r-slider" type="range" min="0" max="255" step="1" value=clCrosshaircolorR}}
      {{input type="number" min="0" max="255" step="1" value=clCrosshaircolorR}}
    </li>
    <li class="Category-item">
      <label for="crosshair-color-g-slider">Green <i class="octicon octicon-info"></i> <i class="reset-value octicon octicon-sync" {{action 'setToDefaultValue' 'clCrosshaircolorG'}}></i></label>
      {{input data-command="cl_crosshaircolor_g" id="crosshair-color-g-slider" type="range" min="0" max="255" step="1" value=clCrosshaircolorG}}
      {{input type="number" min="0" max="255" step="1" value=clCrosshaircolorG}}
    </li>
    <li class="Category-item">
      <label for="crosshair-color-b-slider">Blue <i class="octicon octicon-info"></i> <i class="reset-value octicon octicon-sync" {{action 'setToDefaultValue' 'clCrosshaircolorB'}}></i></label>
      {{input data-command="cl_crosshaircolor_b" id="crosshair-color-b-slider" type="range" min="0" max="255" step="1" value=clCrosshaircolorB}}
      {{input type="number" min="0" max="255" step="1" value=clCrosshaircolorB}}
    </li>
    <li class="Category-item">
      <label for="crosshair-alpha-slider">Alpha <i class="octicon octicon-info"></i> <i class="reset-value octicon octicon-sync" {{action 'setToDefaultValue' 'clCrosshairalpha'}}></i></label>
      {{input data-command="cl_crosshairalpha" id="crosshair-alpha-slider" type="range" min="0" max="255" step="1" value=clCrosshairalpha}}
      {{input type="number" min="0" max="255" step="1" value=clCrosshairalpha}}
    </li>
    <li class="Category-item">
      <label for="crosshair-draw-outline-box">Draw Outline <i class="octicon octicon-info"></i> <i class="reset-value octicon octicon-sync" {{action 'setToDefaultValue' 'clCrosshairDrawoutline'}}></i></label>
      {{input data-command="cl_crosshair_drawoutline" id="crosshair-draw-outline-box" type="checkbox" checked=clCrosshairDrawoutline}}
    </li>
    <li class="Category-item">
      <label for="crosshair-outline-thickness-slider">Outline Thickness <i class="octicon octicon-info"></i> <i class="reset-value octicon octicon-sync" {{action 'setToDefaultValue' 'clCrosshairOutlinethickness'}}></i></label>
      {{input data-command="cl_crosshair_outlinethickness" id="crosshair-outline-thickness-slider" type="range" min="0" max="3" step="1" value=clCrosshairOutlinethickness}}
      {{input type="number" min="0" max="3.0" step="1" value=clCrosshairOutlinethickness}}
    </li>
    <li class="Category-item">
      <label for="crosshair-size-slider">Size <i class="octicon octicon-info"></i> <i class="reset-value octicon octicon-sync" {{action 'setToDefaultValue' 'clCrosshairsize'}}></i></label>
      {{input data-command="cl_crosshairsize" id="crosshair-size-slider" type="range" min="-1" max="200" step="0.5" value=clCrosshairsize}}
      {{input type="number" min="-1" max="200" step="0.5" value=clCrosshairsize}}
    </li>
    <li class="Category-item">
      <label for="crosshair-thickness-slider">Thickness <i class="octicon octicon-info"></i> <i class="reset-value octicon octicon-sync" {{action 'setToDefaultValue' 'clCrosshairthickness'}}></i></label>
      {{input data-command="cl_crosshairthickness" id="crosshair-thickness-slider" type="range" min="0" max="200" step="0.5" value=clCrosshairthickness}}
      {{input type="number" min="0" max="200" step="0.5" value=clCrosshairthickness}}
    </li>
    <li class="Category-item">
      <label for="crosshair-gap-slider">Gap <i class="octicon octicon-info"></i> <i class="reset-value octicon octicon-sync" {{action 'setToDefaultValue' 'clCrosshairgap'}}></i></label>
      {{input data-command="cl_crosshairgap" id="crosshair-gap-slider" type="range" min="-100" max="100" step="1" value=clCrosshairgap}}
      {{input type="number" min="-100" max="100" step="1" value=clCrosshairgap}}
    </li>
    <li class="Category-item">
      <label for="crosshair-dot-box">Dot <i class="octicon octicon-info"></i> <i class="reset-value octicon octicon-sync" {{action 'setToDefaultValue' 'clCrosshairdot'}}></i></label>
      {{input data-command="cl_crosshairdot" id="crosshair-dot-box" type="checkbox" checked=clCrosshairdot}}
    </li>
  </ul>
</div>

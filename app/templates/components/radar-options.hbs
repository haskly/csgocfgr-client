<div class="Category">
  <button class="Category-title {{if isOpen "Category-title--open"}}" {{action 'toggleDisplay'}}>
    <span class="octicon {{if isOpen "octicon-chevron-down" "octicon-chevron-right"}}"></span>
    <span class="Category-title-text">Radar</span>
  </button>
  <ul class="Category-items {{if isOpen "Category-items--open"}}">
    <li class="Category-item">
      <label for="radar-hud-scale-slider">
        <i class="octicon octicon-info"></i>
        Radar HUD Scale
      </label>
      <div class="Category-inputs">
        {{input class="Category-input Category-input--range" data-command="cl_hud_radar_scale" id="radar-hud-scale-slider" type="range" min="0.8" max="1.3" step="0.01" value=clHudRadarScale}}
        {{input class="Category-input Category-input--number" type="number" min="0.25" max="1.3" step="0.01" value=clHudRadarScale}}
      </div>
    </li>
    <li class="Category-item">
      <label for="radar-scale-slider">
        <i class="octicon octicon-info"></i>
        Radar Scale
      </label>
      <div class="Category-inputs">
        {{input class="Category-input Category-input--range" data-command="cl_radar_scale" id="radar-scale-slider" type="range" min="0.25" max="1" step="0.01" value=clRadarScale}}
        {{input class="Category-input Category-input--number" type="number" min="0.25" max="1" step="0.01" value=clRadarScale}}
      </div>
    </li>
    <li class="Category-item">
      <label for="radar-icon-scale-slider">
        <i class="octicon octicon-info"></i>
        <i class="reset-value octicon octicon-sync" {{action 'setToDefaultValue' 'clRadarIconScaleMin'}}></i>
        Radar Icon Scale
      </label>
      <div class="Category-inputs">
        {{input class="Category-input Category-input--range" data-command="cl_radar_icon_scale_min" id="radar-icon-scale-slider" type="range" min="0.4" max="1.0" step="0.01" value=clRadarIconScaleMin}}
        {{input class="Category-input Category-input--number" type="number" min="0.4" max="1.0" step="0.01" value=clRadarIconScaleMin}}
      </div>
    </li>
    <li class="Category-item">
      <label for="radar-always-centered-box">
        <i class="octicon octicon-info"></i>
        <i class="reset-value octicon octicon-sync" {{action 'setToDefaultValue' 'clRadarAlwaysCentered'}}></i>
        Radar Always Centered
      </label>
      <div class="Category-inputs">
        {{input class="Category-input Category-input--checkbox" data-command="cl_radar_always_centered" id="radar-always-centered-box" type="checkbox" checked=clRadarAlwaysCentered}}
      </div>
    </li>
    <li class="Category-item">
      <label for="radar-rotate-box">
        <i class="octicon octicon-info"></i>
        <i class="reset-value octicon octicon-sync" {{action 'setToDefaultValue' 'clRadarRotate'}}></i>
        Radar Rotate
      </label>
      <div class="Category-inputs">
        {{input class="Category-input Category-input--checkbox" data-command="cl_radar_rotate" id="radar-rotate-box" type="checkbox" checked=clRadarRotate}}
      </div>
    </li>
  </ul>
</div>

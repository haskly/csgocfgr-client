<section>
  <h3>Radar</h3>
  <div class="radar-preview">
    <div class="radar-preview__inner">
      <div class="radar-image"></div>
      {{radar-canvas data=model selectedPreview=controller.currentImage}}
    </div>
  </div>
  <div class="settings">
    <div class="settings__inputs">
      <div class="settings__inputs-option">
        <label for="radar-hud-scale-slider">Radar HUD Scale <i class="octicon octicon-info"></i></label>
        {{input data-command="cl_hud_radar_scale" id="radar-hud-scale-slider" type="range" min="0.8" max="1.3" step="0.01" value=clHudRadarScale}}
        {{input type="number" min="0.25" max="1" step="0.01" value=clHudRadarScale}}
      </div>
      <div class="settings__inputs-option">
        <label for="radar-scale-slider">Radar Scale <i class="octicon octicon-info"></i></label>
        {{input data-command="cl_radar_scale" id="radar-scale-slider" type="range" min="0.25" max="1" step="0.01" value=clRadarScale}}
        {{input type="number" min="0.25" max="1" step="0.01" value=clRadarScale}}
      </div>
      <div class="settings__inputs-option">
        <label for="radar-icon-scale-slider">Radar Icon Scale <i class="octicon octicon-info"></i></label>
        {{input data-command="cl_radar_icon_scale_min" id="radar-icon-scale-slider" type="range" min="0.4" max="1.0" step="0.01" value=clRadarIconScaleMin}}
        {{input type="number" min="0.4" max="1.0" step="0.01" value=clRadarIconScaleMin}}
      </div>
      <div class="settings__inputs-option settings__inputs-option--checkbox">
        <label for="radar-always-centered-box">Radar Always Centered <i class="octicon octicon-info"></i></label>
        <div class="checkbox-slider">
          {{input data-command="cl_radar_always_centered" id="radar-always-centered-box" type="checkbox" checked=clRadarAlwaysCentered}}
          <label for="radar-always-centered-box"></label>
        </div>
      </div>
      <div class="settings__inputs-option settings__inputs-option--checkbox">
        <label for="radar-rotate-box">Radar Rotate <i class="octicon octicon-info"></i></label>
        <div class="checkbox-slider">
          {{input data-command="cl_radar_rotate" id="radar-rotate-box" type="checkbox" checked=clRadarRotate}}
          <label for="radar-rotate-box"></label>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="Category">
  <button class="Category-title {{if isOpen "Category-title--open"}}" {{action 'toggleDisplay'}}>
    <span class="octicon {{if isOpen "octicon-chevron-down" "octicon-chevron-right"}}"></span>
    <span class="Category-title-text">Mouse</span>
  </button>
  <ul class="Category-inputs {{if isOpen "Category-inputs--open"}}">
    <li class="Category-item">
      <label for="sensitivity-slider">Sensitivity <i class="octicon octicon-info"></i> <i class="reset-value octicon octicon-sync" {{action 'setToDefaultValue' 'sensitivity'}}></i></label>
      {{input data-command="sensitivity" id="sensitivity-slider" type="range" min="0" max="20" step="0.1" value=sensitivity}}
      {{input type="number" min="0" max="20" step="0.1" value=sensitivity}}
    </li>
    <li class="Category-item">
      <label for="zoom-sensitivity-slider">Zoom Sensitivity <i class="octicon octicon-info"></i> <i class="reset-value octicon octicon-sync" {{action 'setToDefaultValue' 'zoomSensitivityRatioMouse'}}></i></label>
      {{input data-command="zoom_sensitivity_ratio_mouse" id="zoom-sensitivity-slider" type="range" min="0" max="20" step="0.01" value=zoomSensitivityRatioMouse}}
      {{input type="number" min="0" max="20" step="0.01" value=zoomSensitivityRatioMouse}}
    </li>
    <li class="Category-item">
      <label for="mouse-acceleration-slider">Mouse Acceleration <i class="octicon octicon-info"></i> <i class="reset-value octicon octicon-sync" {{action 'setToDefaultValue' 'mCustomaccel'}}></i></label>
      {{custom-select data=model.mCustomaccel options=customAccelOptions dataCommand="m_customaccel"}}
    </li>
    <li class="Category-item">
      <label for="mouse-raw-input-box">Raw Input <i class="octicon octicon-info"></i> <i class="reset-value octicon octicon-sync" {{action 'setToDefaultValue' 'mRawinput'}}></i></label>
      {{input data-command="m_rawinput" id="mouse-raw-input-box" type="checkbox" checked=mRawinput}}
    </li>
  </ul>
</div>
